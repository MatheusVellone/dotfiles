[alias]
	aliases = config --get-regexp alias

	amend = commit --amend --reuse-message=HEAD

	a = add
	aa = add -A
	ap = add -p
	c = commit
	conflict = mergetool
	cc = checkout
	ccm = checkout master
	ccb = checkout -b
	cp = checkout -p
	d = diff
	l = log
	lo = log --oneline
	ma = merge --abort
	p = push origin HEAD
	pf = push origin HEAD --force-with-lease
	po = pull origin HEAD
	por = pull origin HEAD --rebase
	prune = pull --prune
	r = reset
	ra = rebase --abort
	rbi = rebase -i --preserve-merges
	rc = rebase --continue
	rs = rebase --skip
	s = status
	sa = stash apply
	sc = stash clear
	sl = stash list
	sp = stash pop
	st = stash
[user]
	email = matheusvellone@hotmail.com
	name = Matheus Peviani Vellone
[commit]
	gpgsign = true
[core]
	editor = nvim
[merge]
	tool = vscode
	keepBackup = false
[mergetool "vscode"]
	cmd = code --wait $MERGED
[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
